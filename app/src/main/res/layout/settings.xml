<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFFFFF"

        android:padding="5dp">


        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="Settings"
                android:textColor="#666666"
                android:textSize="28sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/message"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/colorPrimary"
                android:foreground="?android:attr/selectableItemBackground"
                android:transitionName="open_mediaplayer"
                card_view:cardCornerRadius="14dp"
                card_view:cardElevation="10dp">

                <RelativeLayout
                    android:id="@+id/rel_one"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/rel_two"


                        android:src="@drawable/bannergray" />


                    <RelativeLayout
                        android:id="@+id/rel_two"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_vertical"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="5dp"

                        android:visibility="gone">

                        <TextView
                            android:id="@+id/translation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Translation"
                            android:textColor="#666666"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/translation_caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/translation"
                            android:text="Accurate and Reliable Services"
                            android:textColor="@color/grey1"


                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/button_border"

                            android:text="Get"

                            android:textColor="#FFFFFF" />


                    </RelativeLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:text="Account Settings"
            android:textColor="@color/grey_black"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/main"
            android:layout_marginTop="25dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/spacecraftImg"
                android:layout_width="40dp"
                android:layout_height="40dp"


                android:layout_marginTop="8dp"

                android:src="@drawable/account" />


            <TextView
                android:id="@+id/editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:layout_toRightOf="@+id/spacecraftImg"
                android:padding="6dp"
                android:text="Vanan Account Login"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel1"
            android:background="@color/grey">

        </View>


        <TextView
            android:id="@+id/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="General Settings"
            android:textColor="@color/grey_black"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel3"
            android:layout_marginTop="0dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/privacyimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/privacy" />


            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/privacyimage"
                android:padding="8dp"
                android:text="Privacy Policy"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel2"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel_shareapp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/terms_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/terms" />


            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:layout_toRightOf="@+id/terms_image"
                android:padding="8dp"
                android:text="Terms and Conditions"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel3"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel2"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/aboutus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/about" />


            <TextView
                android:id="@+id/aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/aboutus_image"
                android:padding="8dp"
                android:text="About Us"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel4"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/general"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/contactus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/contactus" />


            <TextView
                android:id="@+id/contactus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/contactus_image"
                android:padding="8dp"
                android:text="Contact Us"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel5"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel_faqs"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel5"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/faqs_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/faqs" />


            <TextView
                android:id="@+id/faqs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/faqs_image"
                android:padding="8dp"
                android:text="FAQ"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_faqs"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel_shareapp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel_faqs"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/share" />


            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/share_image"
                android:padding="8dp"
                android:text="Share with Friends "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_shareapp"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel4"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:visibility="gone"
            android:padding="5dp">

            <ImageView
                android:id="@+id/spacecraftImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/logout" />


            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/spacecraftImg1"
                android:padding="8dp"
                android:text="Logout"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"

                android:textStyle="bold" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                android:layout_marginTop="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/rel6"


            android:layout_centerHorizontal="true"


            android:padding="10dp"
            android:text="App Version : 2.4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/version1"
            android:layout_width="45dp"
            android:layout_height="55dp"

            android:layout_below="@+id/version"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"

            android:text="App Version : 1.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="invisible"

            />


    </RelativeLayout>


</ScrollView>
