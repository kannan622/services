<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="5dp">


        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/general"
            android:layout_marginTop="0dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/privacyimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/copy" />


            <TextView
                android:id="@+id/copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/privacyimage"
                android:padding="8dp"
                android:text="Copy"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel2"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel2"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/terms_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"

                android:src="@drawable/share_" />


            <TextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"

                android:layout_toRightOf="@+id/terms_image"

                android:text="Share"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel3"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel3"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/aboutus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/erase" />


            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/aboutus_image"
                android:padding="8dp"
                android:text="Delete"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel4"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel4"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/contactus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/expand" />


            <TextView
                android:id="@+id/expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/contactus_image"
                android:padding="8dp"
                android:text="Expand"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel5"
            android:background="@color/grey">

        </View>

        <RelativeLayout
            android:id="@+id/rel6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/rel5"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:padding="5dp">

            <ImageView
                android:id="@+id/spacecraftImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="8dp"
                android:paddingLeft="5dp"
                android:src="@drawable/switch_" />


            <TextView
                android:id="@+id/switch_lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/spacecraftImg1"
                android:padding="8dp"
                android:text="Switch Languages"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="13sp"
                android:textStyle="bold"

                />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>