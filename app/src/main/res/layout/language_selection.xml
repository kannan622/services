<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    >


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"

        android:text="@string/title_lang"
        android:textColor="#666666"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/done"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="30dp"
        android:text="Done"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="bold"

        />


    <LinearLayout
        android:id="@+id/rel_parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/message"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rect">


        <TextView
            android:id="@+id/from_lang_head"

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"


            android:paddingLeft="30dp"

            android:paddingTop="10dp"
            android:text="From Language"

            android:textColor="@color/purple"
            android:textStyle="bold"


            />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/from_lang_head"
            android:background="@color/purple"></View>

        <TextView
            android:id="@+id/to_lang_head"

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/from_lang_head"

            android:layout_weight="1"
            android:paddingLeft="45dp"

            android:paddingTop="10dp"
            android:text="To Language"

            android:textColor="@color/purple"
            android:textStyle="bold"

            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rel_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_below="@+id/rel_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/whiteborder">


        <EditText
            android:id="@+id/search"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="10dp"
            android:hint="Search"
            android:padding="5dp"
            android:paddingLeft="5dp"


            />

        <EditText
            android:id="@+id/search1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="10dp"
            android:hint="Search"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:visibility="gone"


            />


    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/rel_from_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_search"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <include layout="@layout/list_view"></include>


    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rel_to_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_search"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <include layout="@layout/list_view1"></include>


    </RelativeLayout>


</RelativeLayout>

