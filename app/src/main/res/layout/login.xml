<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:text="@string/title_login"
            android:textColor="#666666"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"


            android:src="@drawable/error_grey" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/message"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="250dp"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"


                android:src="@drawable/login_"

                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/spacecraftImg"
                android:padding="1dp"
                android:text="Signup and get quote for professional"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="16sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/text1"


                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/spacecraftImg"
                android:text="human Translation services"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey1"
                android:textSize="16sp"
                android:textStyle="bold"


                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/text2"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"


                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:background="@color/colorPrimary"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:transitionName="open_mediaplayer"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="*"
                        android:textColor="#ff0000"

                        />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"


                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="Enter Name"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@color/grey1"

                        android:textSize="15sp"
                        android:textStyle="bold"


                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/card_view"
                    android:layout_gravity="center"

                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:transitionName="open_mediaplayer"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="*"
                        android:textColor="#ff0000"

                        />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:background="@android:color/transparent"


                        android:fontFamily="sans-serif"
                        android:hint="Enter Email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/grey1"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/card_view1"
                    android:layout_gravity="center"

                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:transitionName="open_mediaplayer"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!--  <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                              android:id="@+id/spinner"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="15dp"
                              android:layout_marginTop="13dp"
                              android:backgroundTint="@color/colorPrimary"


                              android:maxLines="1"
                              android:textColor="@color/grey1"
                              android:textSize="15sp"


                              android:textStyle="bold"

                              />-->

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="5dp"

                            app:defaultNameCode="USA"


                            />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"

                            android:layout_toRightOf="@+id/ccp"
                            android:background="@color/grey"


                            ></View>

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"
                            android:layout_toRightOf="@+id/view1"


                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif"
                            android:hint="Enter phone"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:textColor="@color/grey1"
                            android:textSize="15sp"

                            android:textStyle="bold"></EditText>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:layout_below="@+id/card_view2"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:background="@color/colorPrimary"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:transitionName="open_mediaplayer"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="3dp">

                    <RelativeLayout
                        android:id="@+id/rel_submit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"


                        android:layout_marginBottom="25dp"
                        android:background="@drawable/button_border">

                        <TextView
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"


                            android:background="@android:color/transparent"

                            android:fontFamily="sans-serif"
                            android:text="Submit"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"

                            android:textStyle="bold"

                            />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_below="@+id/card_button"
                    android:visibility="invisible" />


            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>