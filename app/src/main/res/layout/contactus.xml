<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="5dp">


    <RelativeLayout
        android:id="@+id/activity_landing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"


        >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"

            android:text="@string/contact"
            android:textColor="#666666"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"


            android:src="@drawable/error_grey" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/message"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@color/colorPrimary"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="open_mediaplayer"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"

                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"


                >


                <ImageView
                    android:id="@+id/mobile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:padding="10dp"

                    android:src="@drawable/emailus" />


                <TextView
                    android:id="@+id/mobile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="Email Us"
                    android:textColor="@color/grey_black"

                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile_title"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="8dp"
                    android:text="support@vananservices.com"
                    android:textColor="@color/grey1"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/card_view"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@color/colorPrimary"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="open_mediaplayer"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"

                android:layout_marginRight="30dp">


                <ImageView
                    android:id="@+id/mobile_image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:padding="10dp"

                    android:src="@drawable/callus" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile_image1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="Call Us"
                    android:textColor="@color/grey_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"

                    android:text="1-888-535-5668"
                    android:textColor="@color/grey1"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@color/colorPrimary"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="open_mediaplayer"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"


                android:layout_marginRight="30dp">


                <RelativeLayout
                    android:id="@+id/image_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">


                    <ImageView
                        android:id="@+id/fb"
                        android:layout_width="40dp"
                        android:layout_height="40dp"


                        android:padding="10dp"

                        android:src="@drawable/fb" />



                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"


                        android:layout_toRightOf="@+id/fb"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"

                        android:src="@drawable/twitter" />

                    <ImageView
                        android:id="@+id/linkedin"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/twitter"
                        android:padding="10dp"

                        android:src="@drawable/link" />

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"

                        android:layout_toRightOf="@+id/linkedin"
                        android:padding="10dp"

                        android:src="@drawable/yuotube" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/social_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_rel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Social media"

                    android:textColor="@color/grey_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/social_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/social_text"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="8dp"
                    android:text="Find us on social media"
                    android:textColor="@color/grey1"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>